<div class="container">
  <h1><%= @list.name %></h1>

  <div class="bookmarks">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card">
        <img src="<%= bookmark.movie.poster_url %>" class="card-img-top">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <p class="card-text">Rating: <%= bookmark.movie.rating %></p>
          <p class="card-text">Comment: <%= bookmark.comment %></p>
          <%= link_to "Delete", bookmark_path(bookmark),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
              class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "Add movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  <%= link_to "Back to lists", lists_path, class: "btn btn-secondary" %>
</div>
